{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": false,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"]
	},
	"include": ["./**/*"],
	"exclude": ["node_modules"]
}
