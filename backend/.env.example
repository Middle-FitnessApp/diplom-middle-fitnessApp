# Строка подключения к базе данных PostgreSQL
# Для локальной разработки используйте локальную БД
# Для продакшна используйте Supabase Database URL
DATABASE_URL="postgresql://postgres:password@localhost:5432/fitnessApp"

# Порт, на котором будет запущен backend сервер
PORT=3000

# Секретные ключи для JWT токенов и cookies
# Генерируйте сильные случайные строки для продакшна!
JWT_ACCESS_SECRET="your-jwt-secret-here"
COOKIE_SECRET="your-cookie-secret-here"

# Режим окружения (development/production)
NODE_ENV="development"

# URL фронтенда для настройки CORS
FRONTEND_URL="http://localhost:5173"

# ========================================
# Supabase Configuration
# ========================================

# Supabase Project URL (из Settings → API)
SUPABASE_URL="https://your-project.supabase.co"

# Supabase Anon Key (публичный ключ для клиентских запросов)
SUPABASE_ANON_KEY="your-anon-key"

# Supabase Service Role Key (секретный ключ для серверных операций)
# ВНИМАНИЕ: Никогда не показывайте этот ключ на клиенте!
SUPABASE_SERVICE_KEY="your-service-role-key"

# Storage Buckets
SUPABASE_PHOTOS_BUCKET="fitness-photos"
SUPABASE_DEFAULTS_BUCKET="default"
